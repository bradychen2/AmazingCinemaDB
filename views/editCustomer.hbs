<div class="container my-2">
  <h2>Customers</h2>
  {{!-- Form --}}
  <form class="row" action="/customers/{{customers.customer_id}}?_method=PUT" method="POST">
    <div class="col-md-6 col-sm-10">
      <div class="input-group mb-3 align-items-center">
        <label for="name" class="form-label mx-2">name</label>
        <input id="name" type="text" class="form-control" name="name" placeholder="ex: John Snow" value="{{customers.name}}">
      </div>
      <div class="input-group mb-3 align-items-center">
        <label for="email" class="form-label mx-2">email</label>
        <input id="email" type="email" class="form-control" name="email" placeholder="ex: name@example.com" value="{{customers.email}}">
      </div>
      <div class="input-group mb-3 align-items-center">
        <label for="phone" class="form-label mx-2">phone</label>
        <input id="phone" type="tel" class="form-control" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
          placeholder="ex: 111-222-3333" value="{{customers.phone}}">
      </div>
       <div class="d-flex">
        <div>
          <input class="btn btn-primary" type="submit" value="Update">
        </div>
        <div class="mx-3">
          <a href="/customers" class="btn btn-secondary">Cancel</a>
        </div>
      </div>

    </div>
  </form>
