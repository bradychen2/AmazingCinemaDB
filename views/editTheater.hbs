<div class="container my-2">
  <h2>Theater</h2>
  {{!-- Form --}}
  <form class="row" action="/theaters/{{theater.theater_id}}?_method=PUT" method="POST">
    <div class="col-md-6 col-sm-10">
      <div class="input-group mb-3 align-items-center">
        <label for="theater-name" class="form-label mx-2">name</label>
        <input id="theater-name" type="text" class="form-control" name="theaterName" value="{{theater.name}}"
          placeholder="theater name">
      </div>
      <div class="input-group mb-3 align-items-center">
        <label for="address" class="form-label mx-2">address</label>
        <input id="address" type="text" class="form-control" name="address" value="{{theater.address}}"
          placeholder="ex: 1234 Main St">
      </div>
      <div class="input-group mb-3 align-items-center">
        <label for="phone" class="form-label mx-2">phone</label>
        <input id="phone" type="tel" class="form-control" name="phone" value="{{theater.phone}}"
          pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="ex: 111-222-3333">
      </div>
      <div class="d-flex">
        <div>
          <input class="btn btn-primary" type="submit" value="Update">
        </div>
        <div class="mx-3">
          <a href="/theaters" class="btn btn-secondary">Cancel</a>
        </div>
      </div>
    </div>
  </form>
</div>